-- üéØ T√ÇM NG·∫ÆM M√ÄU ƒê·ªé D√ÄNH CHO MOBILE
local player = game.Players.LocalPlayer
local PlayerGui = player:WaitForChild("PlayerGui")

-- X√≥a t√¢m c≈© (n·∫øu c√≥)
if PlayerGui:FindFirstChild("Crosshair") then
	PlayerGui.Crosshair:Destroy()
end

-- T·∫°o t√¢m m·ªõi
local crosshair = Instance.new("Frame")
crosshair.Name = "Crosshair"
crosshair.Size = UDim2.new(0, 10, 0, 10) -- k√≠ch th∆∞·ªõc
crosshair.Position = UDim2.new(0.5, -5, 0.5, -5)
crosshair.BackgroundColor3 = Color3.fromRGB(255, 0, 0) -- m√†u ƒë·ªè
crosshair.BorderSizePixel = 0
crosshair.Active = false
crosshair.Parent = PlayerGui

-- L√†m tr√≤n cho ƒë·∫πp
local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(1, 0)
corner.Parent = crosshair

-- Th√™m vi·ªÅn ƒëen m·∫£nh cho d·ªÖ nh√¨n
local stroke = Instance.new("UIStroke")
stroke.Thickness = 1
stroke.Color = Color3.fromRGB(0, 0, 0)
stroke.Parent = crosshair
