info.Text =
"â€¢ FPS Ä‘á» = lag\n"..
"â€¢ FPS vÃ ng = trung bÃ¬nh\n"..
"â€¢ FPS xanh = mÆ°á»£t\n"..
"â€¢ Script tá»± chá»‘ng AFK 20 phÃºt"

-- AFK Timer Loop
task.spawn(function()
    while true do
        for i = 300, 0, -1 do
            timer.Text = "AFK: "..i.."s"
            task.wait(1)
        end
        cam.CFrame *= CFrame.Angles(0, math.rad(math.random(3, 6)), 0)
        vu:Button2Down(Vector2.new(), cam.CFrame)
        task.wait(0.5)
        vu:Button2Up(Vector2.new(), cam.CFrame)
    end
end)